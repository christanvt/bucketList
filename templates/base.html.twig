<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta property="og:image" content="{{ asset('img/screenschotBucketlist.png') }}"/>

		<title>
			{% block title %}Bucket-list
			{% endblock %}
		</title>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Crimson+Pro:ital,wght@1,200&display=swap" rel="stylesheet">
		<link
		rel="stylesheet" href="{{ asset('css/app.css') }}">
		<!-- CSS only -->
		<link rel="stylesheet" href="{{ asset('css/normalize.css') }}">
		<link rel="icon" href="{{ asset('img/favicon.png') }}">

	</head>
	<body>
		<div class="container">
			<header>
				<h1>
					<a href="{{ path('main_home') }}"><img src="{{ asset('img/logo.svg') }}" alt="Bucket-list">
						Bucket-list</a>
				</h1>
				{% include "inc/nav.html.twig" %}

			</header>

			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="flash flash-{{ label }}">{{ message }}</div>
				{% endfor %}
			{% endfor %}

			<main>
				{% block body %}{% endblock %}
			</main>
			<footer>
				<div class="mention">&copy;
					{{ "now"|date("Y") }}
					Bucket-list
				</div>
			</footer>
		</div>
	</body>
</html>
